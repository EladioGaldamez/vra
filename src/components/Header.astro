---
const links = [
  { url: "/#about", text: "Sobre m√≠" },
  { url: "/#work", text: "Trabajo" },
  { url: "/#contact", text: "Contacto" },
];
---

<nav
  class="flex flex-wrap justify-between items-center relative mx-auto px-3 lg:px-8 py-6"
>
  <a
    class="font-nunito font-semibold text-white cursor-pinter text-lg"
    href="/"
  >
    Tina Rosero
  </a>
  <input type="checkbox" id="check" class="peer sr-only" />

  <div
    class="w-0 h-dvh lg:w-auto lg:h-auto py-4 px-3 lg:p-0 max-lg:fixed max-lg:top-0 max-lg:-right-full z-50 bg-background transition-all peer-checked:w-screen peer-checked:right-0"
  >
    <ul
      class="flex flex-col mt-6 lg:mt-0 text-center lg:text-left gap-5 lg:flex-row lg:gap-3"
    >
      {
        links.map((link) => (
          <li>
            <a
              data-nav-link={true}
              class="text-4xl lg:text-base text-white hover:text-gray-400 transition-colors  relative after:bg-gray-400 after:absolute after:h-[1px] after:w-0 after:-bottom-1 after:left-0 hover:after:w-full after:transition-all after:duration-300 cursor-pointer"
              href={link.url}
            >
              {link.text}
            </a>
          </li>
        ))
      }
    </ul>

    <label
      for="check"
      class="block lg:hidden absolute top-4 right-3 size-3 text-white hover:text-gray-400"
    >
      <span class="sr-only">Close main menu</span>
      <svg
        class="size-3 text-white hover:text-gray-400"
        stroke="currentColor"
        aria-hidden="true"
        data-slot="icon"
      >
        <use xlink:href="/icons-sprite.svg#nav-close-icon"></use>
      </svg>
    </label>
  </div>

  <label for="check" class="block lg:hidden">
    <span class="sr-only">Open main menu</span>
    <svg
      class="size-3 text-white hover:text-gray-400"
      stroke="currentColor"
      aria-hidden="true"
      data-slot="icon"
    >
      <use xlink:href="/icons-sprite.svg#nav-open-icon"></use>
    </svg>
  </label>
</nav>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const navLinks = document.querySelectorAll("[data-nav-link]");
    navLinks.forEach((link) => {
      link.addEventListener("click", () => {
        const $toggler = document.getElementById("check");
        if ($toggler) {
          $toggler.checked = false;
        }
      });
    });
  });
</script>
