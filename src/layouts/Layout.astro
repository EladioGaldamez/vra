---
import "@fontsource-variable/nunito-sans";

import Header from "@/components/Header.astro";

import "@/styles/global.css";

const { title, description, noindex = false } = Astro.props;
---

<!doctype html>
<html lang="es" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <link rel="icon" href="/favicon.png?" type="image/png" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="robots" content={noindex ? "noindex" : "index"} />

    <meta property="og:site_name" content={title} />
    <meta property="og:title" content={title} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://www.tinarosero.com/" />
    <meta property="og:description" content={description} />
    <meta property="og:image" content="https://www.tinarosero.com/tina.png" />
    <meta property="og:image:alt" content="Valentina Rosero" />
    <meta property="og:locale" content="es_ES" />
    
    <!-- Twitter Card data -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content="https://www.tinarosero.com/tina.png" />
    
    <!-- Additional SEO tags -->
    <meta name="author" content="Valentina Rosero" />
    <meta name="keywords" content="modelo internacional, international model, fotografía, photoshoot, portafolio, Valentina Rosero, moda, fashion, model, modeling agency, agencia de modelos, Medellin, Bogotá, Colombia, Guatemala, Latin American model, modelo latinoamericana, fashion photography, editorial, commercial modeling, runway, pasarela, casting, portfolio" />
    <meta name="theme-color" content="#111111" />
    <link rel="canonical" href="https://www.tinarosero.com/" />
    
    <!-- Preconnect to important third-party domains -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    
  </head>
  <body class="bg-background text-white scroll-smooth">
    <Header />

    <slot />

    <footer>
      <p class="text-center text-gray-400 text-xs mb-4">
        &copy; 2025 Valentina Rosero. All rights reserved.
      </p>
    </footer>
  </body>
</html>
