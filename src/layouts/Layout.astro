---
import "@fontsource-variable/nunito-sans";

import Header from "@/components/Header.astro";

import "@/styles/global.css";

const { title, description, noindex = false } = Astro.props;
---

<!doctype html>
<html lang="es" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <link rel="icon" href="/favicon.png?" type="image/png" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="robots" content={noindex ? "noindex" : "index"} />

    <meta property="og:site_name" content={title} />
    <meta property="og:title" content={title} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://www.tinarosero.com/" />
    <meta property="og:description" content={description} />
    <meta property="og:image" content="https://www.tinarosero.com/tina.png" />
    <meta property="og:image:alt" content="Valentina Rosero" />
    <meta property="og:locale" content="es_ES" />

    <!-- Twitter Card data -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content="https://www.tinarosero.com/tina.png" />

    <!-- Additional SEO tags -->
    <meta name="author" content="Valentina Rosero" />
    <meta
      name="keywords"
      content="modelo internacional, international model, fotografía, photoshoot, portafolio, Valentina Rosero, moda, fashion, model, modeling agency, agencia de modelos, Medellin, Bogotá, Colombia, Guatemala, Latin American model, modelo latinoamericana, fashion photography, editorial, commercial modeling, runway, pasarela, casting, portfolio"
    />
    <meta name="theme-color" content="#111111" />
    <link rel="canonical" href="https://www.tinarosero.com/" />

    <!-- Preconnect to important third-party domains -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />

    <!-- Schema.org structured data for a professional model -->
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "Person",
        "name": "Valentina Rosero",
        "additionalName": "Tina Rosero",
        "url": "https://www.tinarosero.com/",
        "image": "https://www.tinarosero.com/tina.png",
        "jobTitle": "Modelo Profesional",
        "description": "Modelo profesional con base en Colombia y experiencia internacional en moda, editorial y modelaje comercial",
        "nationality": {
          "@type": "Country",
          "name": "Colombia"
        },
        "workLocation": [
          {
            "@type": "City",
            "name": "Medellín, Colombia"
          },
          {
            "@type": "City",
            "name": "Bogotá, Colombia"
          },
          {
            "@type": "City",
            "name": "Ciudad de Guatemala, Guatemala"
          }
        ],
        "knowsLanguage": ["Español"],
        "hasOccupation": {
          "@type": "Occupation",
          "name": "Modelo",
          "occupationCategory": "Modelo de Moda",
          "skills": ["Pasarela", "Editorial", "Comercial", "Moda", "Fotografía"]
        },
        "sameAs": [
          "https://www.instagram.com/valentinaroseroa",
          "https://www.tiktok.com/@valenrosero",
          "https://x.com/valenrosero1",
        ]
      }
    </script>
  </head>
  <body class="bg-background text-white scroll-smooth">
    <Header />

    <slot />

    <footer>
      <p class="text-center text-gray-400 text-xs mb-4">
        &copy; 2025 Valentina Rosero. All rights reserved.
      </p>
    </footer>
  </body>
</html>
